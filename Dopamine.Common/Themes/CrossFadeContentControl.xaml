<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:Dopamine.Common.Controls">

    <Style TargetType="{x:Type controls:CrossFadeContentControl}">
            <Setter Property="Template">
                <Setter.Value>
                <ControlTemplate TargetType="{x:Type controls:CrossFadeContentControl}">
                        <Grid ClipToBounds="True">
                            <ContentPresenter x:Name="PART_MainContent" Content="{TemplateBinding Content}"/>
                            <Rectangle x:Name="PART_PaintArea"/>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </ResourceDictionary>

