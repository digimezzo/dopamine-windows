<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:dc="clr-namespace:Digimezzo.WPFControls;assembly=Digimezzo.WPFControls">

    <Style x:Key="MainMenuPivotItemStyle" TargetType="{x:Type dc:PivotItem}">
        <Setter Property="Padding" Value="0,0,15,0"/>
        <Setter Property="HeaderFontWeight" Value="Normal"/>
        <Setter Property="SelectedHeaderFontWeight" Value="Bold"/>
        <Setter Property="HeaderFontSize" Value="12"/>
        <Setter Property="HeaderForeground" Value="{DynamicResource Brush_SecondaryForeground}"/>
        <Setter Property="SelectedHeaderForeground" Value="{DynamicResource Brush_PrimaryForeground}"/>
    </Style>

    <Style x:Key="SubMenuPivotItemStyle" TargetType="{x:Type dc:PivotItem}">
        <Setter Property="Padding" Value="10,0,10,16"/>
        <!--<Setter Property="HeaderFontWeight" Value="Light"/>
        <Setter Property="SelectedHeaderFontWeight" Value="Light"/>-->
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="HeaderFontSize" Value="15"/>
        <Setter Property="HeaderForeground" Value="{DynamicResource Brush_SecondaryForeground}"/>
        <Setter Property="SelectedHeaderForeground" Value="{DynamicResource Brush_PrimaryForeground}"/>
    </Style>
</ResourceDictionary>