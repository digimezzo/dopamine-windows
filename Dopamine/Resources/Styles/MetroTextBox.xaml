    </Style>

    <Style x:Key="MetroPasswordBox" TargetType="{x:Type PasswordBox}">
        <Setter Property="Background" Value="{DynamicResource Brush_Foreground3}" />
        <Setter Property="Foreground" Value="{DynamicResource Brush_Foreground1}" />
