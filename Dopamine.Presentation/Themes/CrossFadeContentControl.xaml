<ResourceDictionary
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:pc="clr-namespace:Dopamine.Presentation.Controls">

  <Style TargetType="{x:Type pc:CrossFadeContentControl}">
    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate TargetType="{x:Type pc:CrossFadeContentControl}">
          <Grid ClipToBounds="True">
            <ContentPresenter x:Name="PART_MainContent" Content="{TemplateBinding Content}" />
            <Rectangle x:Name="PART_PaintArea" />
          </Grid>
        </ControlTemplate>
      </Setter.Value>
    </Setter>
  </Style>
</ResourceDictionary>

